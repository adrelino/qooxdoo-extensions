{
  "name"    : "qooxdoo-extensions",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "dependencies",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",
    "source-server",
    "source-server-reload",
    "source-httpd-config",
    "test",
    "test-source",
    "translation",
    "validate-config",
    "validate-manifest",
    "watch"
  ],

  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "qxex",
    "QOOXDOO_PATH" : "../qooxdoo",
    "QXTHEME"      : "qx.theme.Modern",
    "QXICONTHEME"  : ["Tango", "Oxygen"],
    "API_EXCLUDE"  : ["qx.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*"],
    "LOCALES"      : [ "da", "de", "es", "en", "fr", "it", "ja", "pt", "ru", "vi", "zh"],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    // Uncomment the following entry to add a contrib or library to your
    // project; make sure to adapt the path to the Manifest.json; if you are
    // using a contrib: library, it will be downloaded into the path specified
    // by the 'cache/downloads' config key
   
    "libraries" :
    {
      /*"library" :
      [
        { "manifest" : "../Bamboo/Manifest.json"}
       ,{ "manifest" : "../GraydientTheme/Manifest.json"}
       ,{ "manifest" : "../DarkTheme/Manifest.json"}
       ,{ "manifest" : "../SilverBlueTheme/Manifest.json"}
       ,{ "manifest" : "../Bernstein/Manifest.json"}
      ]*/
    },

    "includes" : {
      "include" : [
        "qx.theme.Modern"
        ,"qx.theme.Classic"
        ,"qx.theme.Simple"
        ,"qx.theme.Indigo"
        /*,"bamboo.theme.Theme"
        ,"graydienttheme.theme.Theme"
        ,"darktheme.theme.Theme"   
        ,"silverbluetheme.theme.Theme"
        ,"bernstein.theme.Theme" */
      ]
    }
    

    // If you want to tweak a job setting, see the following sample where
    // the "format" feature of the "build-script" job is overridden.
    // To see a list of available jobs, invoke 'generate.py x'.
    /*
    ,"build-script" :
    {
      "compile-options" :
      {
        "code" :
        {
          "format" : false
        }
      }
    }
    */
  }
}
